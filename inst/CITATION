         title = "reconsitution: Computer assisted reconstitution",
         author = personList(as.person("Erich R. Round")),
         year = "2025",
         note = "R package version 0.1",
         url = "https://github.com/erichround/reconstitution",

         textVersion  =
           paste("Round, Erich R. (2025)",
                 "reconsitution: Computer assisted reconstitution.",
                 "R package version 0.1",
                 "URL https://github.com/erichround/reconstitution")
)
